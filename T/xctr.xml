<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<doc>
<rowtype xpath="//xctr" max="1">
 <variable xpath="_key" substitution="%key" />
 <variable xpath="doctitle" substitution="%doctitle" />
 <variable xpath="doctitle" substitution="%jsdoctitle" escape="js" />
 <variable xpath="xctr" substitution="%xctr" />
	<html><dialog id="#UNIQUEID#" class="dialog texteditor" draggable="true" ondragstart="app.dialog_drag_start(event)" ondrop="app.dialog_drop(event)" ondragover="app.dialog_drag_over(event);"><input type="hidden" value="%key" />
	 <input type="text" value="%doctitle" placeholder="doctitle" /><br/>
	 <textarea class="xctr-xctr" id="#UNIQUEID#-xctr" placeholder="xml control...">%xctr</textarea><br/>
		<button onclick="app.xctrxctr('#UNIQUEID#');this.parentElement.close();"><i class="fa fa-floppy-o">
		</i></button><button onclick="if(confirm('Eliminare davvero il documento \'%jsdoctitle\' ?')){f$.db.del('%key');this.parentElement.close()}"><i class="fa fa-trash-o"> </i>
		</button><button onclick="this.parentElement.close()"><i class="fa fa-times"> </i></button>
		</dialog></html>
</rowtype>
		<onloadall>
			app.xctrxctr=function(id){var x=document.getElementById(id);var dd=x.getElementsByTagName('textarea');var kk=x.getElementsByTagName('input');
				f$.db.getone(kk[0].value,function(o){o.doctitle=kk[1].value;o.xctr=dd[0].value;f$.db.set(o);});};
			tau.$$('#UNIQUEID#').show();
		</onloadall>
</doc>